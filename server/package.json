{
  "name": "typhoon-app",
  "version": "1.0.0",
  "type": "module",
  "description": "Directory information system",
  "main": "server.ts",
  "scripts": {
    "build": "tsc",
    "start": "node --no-warnings --loader ts-paths-esm-loader --experimental-specifier-resolution=node dist/server/server.js",
    "serve": "node --no-warnings --loader ts-paths-esm-loader --experimental-specifier-resolution=node server.ts",
    "dev": "nodemon -e ts --exec \"npm run serve\""
  },
  "keywords": [
    "directory",
    "information",
    "system",
    "typhoon",
    "web"
  ],
  "author": "Vladislav 'ithelor' Dietrich",
  "license": "ISC",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.0.0",
    "express": "^4.17.3",
    "mongoose": "^6.2.3"
  },
  "devDependencies": {
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "eslint": "^8.9.0",
    "nodemon": "^2.0.15",
    "ts-paths-esm-loader": "^1.3.0",
    "typescript": "^4.5.5"
  }
}
