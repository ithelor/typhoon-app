{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["../shared/*"]
    },
    "strict": true,
    "allowJs": false,
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true,
    "removeComments": true,
    "sourceMap": true
  },
  "exclude": [
    "node_modules"
  ],
}